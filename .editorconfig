# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown – อย่าตัดช่องว่างท้ายบรรทัด (เผื่อใช้สำหรับ line break)
[*.md]
trim_trailing_whitespace = false

# JSON / YAML – ใช้ 2 ช่องว่างเสมอ
[*.{json,yml,yaml}]
indent_size = 2

# TypeScript / JavaScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
